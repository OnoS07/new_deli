<div class="container">
	<div calass="row">
		<div class="col-lg-12">
			<div class="input-form">
				<h2>
					<span class="input-title"><%= @user.name %> Chat Room</span>
				</h2>
				<div class="message" style="width: 100%">
					<% @chats.each do |chat| %>
						<% if chat.user_id == current_user.id %>
							<p class="my_message"><%= chat.message %></p>
						<% else %>
							<p class="user_message"><%= chat.message %></p>
						<% end %>
					<% end %>
				</div>
				<h3><span class="input-title">New Message</span></h3>
			      <%= form_with model: @chat, data: {remote: true} do |f| %>
			        <div class="field">
			        	<%= f.text_area :message, rows:"2", autocomplete: "off",class:"form-control" %>
			        </div>
			        <%= f.hidden_field :room_id %>
			        <div class="field">
			       		<%= f.submit "Message", class:"btn btn-warning" %>
			        </div>
			      <% end %>
			</div>
		</div>
	</div>
</div>
