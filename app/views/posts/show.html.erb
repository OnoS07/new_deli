<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<% if flash[:notice] %>
			 	<div class="flash"><%= flash[:notice]%></div>
			<% end %>

			<div class="post-container flex">
				<div class="post-block">
						<%= attachment_image_tag @post, :post_image, format:"jpg",
						 class:"post-image" %>
				</div>
				<div class="content-block flex">
					<div class="profile-content">
						<%= link_to user_path(@user) do %>
							<%= attachment_image_tag @user, :profile_image, format:"jpg",
								size:"100x100", fallback:"no_image.jpg", class:"profile-image" %>
								<br><%= @user.name %>
						<% end %>
					</div>
					<div class="text-content">
						<span class="title-text">
								<i class="fas fa-paw fa-2x"><%= @post.title %></i><br>
						</span>
						<span class="body-text">
							<%= @post.body %>
						</span><br>
						<div class="action-text">
							<i class="far fa-comment"><%= @post.post_comments.count %></i>
							<i class="fas fa-thumbs-up", style="color:silver;"></i>
							<%= @post.favorites.count %><br>
							<%= @post.created_at.strftime('%Y/%m/%d') %><br>
							<% if current_user == @user %>
								<%= link_to "編集", edit_post_path(@post) %>|
								<%= link_to "削除", post_path(@post), method: :delete,
									data: { confirm: '本当に削除しますか?' } %>
							<% end %>
						</div>

					</div>
				</div>
			</div>

			<section class="input-form">
	        <h2><span class="input-title">Comments</span></h2>
			<% @post_comments.each do |comment| %>
			<div class="content-block flex">
				<div class="profile-content">
						<%= attachment_image_tag comment.user, :profile_image, format:"jpg",
							size:"100x100", fallback:"no_image.jpg",
							class:"profile-image" %>
				</div>
				<div class="text-content">
					<span class="title-text">
						<i class="fas fa-dog"><%= comment.user.name %></i><br>
					</span>
					<span class="body-text">
						<%= comment.comment %>
					</span><br>
					<div class="action-text">
						<%= comment.created_at.strftime('%Y/%m/%d') %>
						<% if comment.user == current_user %>
							<%= link_to "削除", post_post_comment_path(comment),method: :delete %>
						<% end %>
					</div>
				</div>
			</div>
			<div style="border-bottom: 1px solid silver"></div>
			<% end %>
			</section>

			<section>
			<% if flash[:comment] %>
			 	<div class="comment"><%= flash[:comment]%></div>
			<% end %>
			<div class="input-form">
	        <h2><span class="input-title">New Comment</span></h2>
		      <%= form_for [@post,@post_comment] do |f| %>
		        <div class="field">
		          <%= f.label :comment %><br />
		          <%= f.text_area :comment, rows:"3", autocomplete: "off",
		            class:"form-control" %>
		        </div>
		        <div class="field input-btn">
		          <%= f.submit "NEW COMMENT", class:"btn btn-warning btn-block" %>
		        </div>
		      <% end %>
	      	</div>
			</section>

		</div>
	</div>
</div>