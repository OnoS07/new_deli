<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <div class="input-form">

        <% if @user.errors.any? %>
          <div class="alert">
            <h2><%= @user.errors.count %>errors</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <h2><span class="input-title">Profile Edit</span></h2>
      <%= form_for(@user) do |f| %>
        <div class="field">
          <%= f.label :profile_image, class:"btn btn-primary image-btn" %><br>
          <%= f.attachment_field :profile_image, style:"display:none;", class:"image-select" %>
        </div>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "off", class:"form-control",
            placeholder:"name..." %>
        </div>

        <div class="field">
          <%= f.label :introduction %><br />
          <%= f.text_area :introduction, rows:"3", autofocus: true, autocomplete: "off",
            class:"form-control", placeholder:"introduction..." %>
        </div>

        <div class="field input-btn">
          <%= f.submit "UPDATE", class:"btn btn-warning btn-block" %>
        </div>
      <% end %>

      </div>
    </div>
  </div>
</div>