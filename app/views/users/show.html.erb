<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<% if flash[:notice] %>
			 	<div class="flash"><%= flash[:notice]%></div>
			<% end %>

			<%= render "info", user: @user %>

			<% @posts.each do |post| %>
			<div class="post-container flex">
				<div class="post-block">
					<%= link_to post_path(post) do %>
						<%= attachment_image_tag post, :post_image, format:"jpg",
						 class:"post-image" %>
					 <% end %>
				</div>
				<div class="content-block flex">
					<div class="text-content">
						<span class="title-text">
							<%= link_to post_path(post) do %>
								<i class="fas fa-paw fa-2x"><%= post.title %></i>
							<% end %><br>
						</span>
						<span class="body-text">
							<%= post.body %>
						</span><br>
						<div class="action-text">
							<i class="far fa-comment"><%= post.post_comments.count %></i>
							<span class="favorite_<%= post.id %>" >
								<%= render partial: "posts/favorite",locals:{ post: post } %>
							</span>
						</div>

					</div>
				</div>
			</div>
			<% end %>

		</div>
	</div>
</div>